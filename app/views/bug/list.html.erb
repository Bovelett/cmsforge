<div class="content">
<% @curloc = 'bug' -%>

<div class="small_nav">
  <%= link_to "Submit New Bug", :action => :add, :id => @project_id -%>
</div>

<div class="filter">
  <p>Show Closed: <%= check_box_tag('show_closed', '1', @show_closed == '1', {:onchange => remote_function(:url => { :id => @project.id }, :loading => "Element.show('spinner')", :complete => "Element.hide('spinner')", :with => "'show_closed='+this.checked+'&amp;page=" + params[:page].to_s + "'")}) -%></p>

<div class="entry">
<% form_tag({:action => 'view'}, {:method => 'get'}) do -%>
  
  <span class="label">  Jump to Bug # </span>
  <%= text_field_tag 'id', '', :size => 4 -%> 
  <span class="bt-forms">
  <%= submit_tag 'Submit' -%>
  </span><!--bt-forms-->
  <% end -%>
  
</div><!--entry-->
  
</div><!--filter-->

<div id="data">

	<%= render :partial => 'bug/bug_list' -%>
</div>
</div><!--content-->

